<% content_for :title, "Detalhes da Transferência" %>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-bold text-4xl mb-6 text-gray-900 dark:text-white">Detalhes da Transferência</h1>

    <div class="mb-4">
      <strong class="text-gray-700 dark:text-gray-300">Aluno:</strong>
      <span class="text-gray-900 dark:text-white">
        <%= link_to @transfer.student.name, student_path(@transfer.student), class: "text-blue-600 hover:underline dark:text-blue-400" if @transfer.student.present? %>
        <%= 'Aluno Removido' unless @transfer.student.present? %>
      </span>
    </div>

    <div class="mb-4">
      <strong class="text-gray-700 dark:text-gray-300">Escola Destino:</strong>
      <span class="text-gray-900 dark:text-white"><%= @transfer.school_destination %></span>
    </div>

    <div class="mb-6">
      <strong class="text-gray-700 dark:text-gray-300">Data da Transferência:</strong>
      <span class="text-gray-900 dark:text-white"><%= @transfer.transfer_date&.strftime("%d/%m/%Y") %></span>
    </div>

    <div class="flex items-center justify-start gap-4 mt-8">
      <%= link_to "Editar esta transferência", edit_transfer_path(@transfer), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      <%= link_to "Voltar para transferências", transfers_path, class: "rounded-md px-3.5 py-2.5 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
      <%= button_to "Excluir esta transferência", @transfer, method: :delete, data: { turbo_confirm: "Tem certeza que deseja excluir esta transferência?" }, class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white font-medium" %>
    </div>
  </div>
</div>