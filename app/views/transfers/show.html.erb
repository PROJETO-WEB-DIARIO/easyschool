<% content_for :title, "Detalhes da Transferência" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6 text-gray-900 dark:text-white">Detalhes da Transferência</h1>

  <div class="mb-4">
    <strong class="text-gray-700 dark:text-gray-300">Aluno:</strong>
    <span class="text-gray-900 dark:text-white">
      <%= link_to @transfer.student.name, student_path(@transfer.student), class: "text-blue-600 hover:underline dark:text-blue-400" if @transfer.student.present? %>
      <%= 'Aluno Removido' unless @transfer.student.present? %>
    </span>
  </div>

  <div class="mb-4">
    <strong class="text-gray-700 dark:text-gray-300">Escola Destino:</strong>
    <span class="text-gray-900 dark:text-white"><%= @transfer.school_destination %></span>
  </div>

  <div class="mb-6">
    <strong class="text-gray-700 dark:text-gray-300">Data da Transferência:</strong>
    <span class="text-gray-900 dark:text-white"><%= @transfer.transfer_date&.strftime("%d/%m/%Y") %></span>
  </div>

  <%= link_to "Editar esta transferência", edit_transfer_path(@transfer), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Voltar para transferências", transfers_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Excluir esta transferência", @transfer, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Tem certeza que deseja excluir esta transferência?" } %>
</div>
