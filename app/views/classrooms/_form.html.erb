<%= form_with(model: classroom, class: "contents") do |form| %>
  <% if classroom.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(classroom.errors.count, "erro") %> impediram que esta turma fosse salva:</h2>

      <ul class="list-disc ml-6">
        <% classroom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, "Nome", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :name,
      placeholder: "Nome da Turma",
      required: true,
      class: [
        "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 mt-2",
        "dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
        { "border-red-400 focus:outline-red-600": classroom.errors[:name].any? }
      ] %>
  </div>

  <div class="my-5">
    <%= form.label :year, "Ano Letivo", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.number_field :year,
      placeholder: "Ex: 2025",
      required: true,
      class: [
        "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 mt-2",
        "dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
        { "border-red-400 focus:outline-red-600": classroom.errors[:year].any? }
      ] %>
  </div>

  <div class="my-5">
    <%= form.label :series, "Série", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :series,
      placeholder: "Ex: 5º Ano",
      required: true,
      class: [
        "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 mt-2",
        "dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
        { "border-red-400 focus:outline-red-600": classroom.errors[:series].any? }
      ] %>
  </div>

  <div class="inline my-5">
    <%= form.submit "Salvar turma", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
