<% content_for :title, "Visualizar turma" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="mb-10 font-bold text-4xl green-50 dark:text-white">Detalhe da turma</h1>

  <%= render @classroom %>

  <!-- Espaço entre a tabela e os botões -->
  <div class="mt-8 flex flex-wrap gap-2">
    <%= link_to "Editar a turma", edit_classroom_path(@classroom), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Voltar ao menu Turma", classrooms_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Excluir turma", @classroom, method: :delete, form_class: "sm:inline-block", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Você tem certeza?" } %>
  </div>
</div>
